{% extends 'ProjetSymfonyCinemaBundle::layout.html.twig' %}

{% block body %}

    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <div class="col-md-3">
                <p class="lead">Cinéma</p>
                <div class="list-group">
                    <a href="{{ path('page_films') }}" class="list-group-item">Films</a>
                    <a href="{{ path('page_realisateurs') }}" class="list-group-item active">Réalisateurs</a>
                </div>
            </div>

            <div class="col-md-9">

                <h2>Liste des films</h2>

                <br/>
                {% for realisateur in realisateurs %}
                    <div class="well">
                        <div class="row">
                            <div class="col-md-12">
                                <strong>{{ realisateur.prenom }} {{ realisateur.nom }}</strong> (58 ans)<br/>
                                <br/>
                                <p>{{ realisateur.description }}</p>
                                <hr/>
                                <div class="text-right">
                                    <a href="cinema-films-realisateur.html" class="btn btn-success">Voir ses films</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}

            </div>

        </div>

    </div>
    <!-- /.container -->

    <div class="container">

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Nicolas Vessiere 2017</p>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    </body>

    </html>

{% endblock %}




